@model PlataformaIEB.ViewModel.VMLogin
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="card border-secondary mb-auto" style="max-width: 40rem;">
        <div class="card-header text-center">LOGIN</div>
        <div class="card-body">
            @Html.ValidationSummary()
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.DisplayNameFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <span class="help-block">
                        @Html.ValidationMessageFor(m => m.Email)
                    </span>
                </div>

                <div class="form-group">
                    @Html.DisplayNameFor(m => m.Senha)
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                    <span class="help-block">
                        @Html.ValidationMessageFor(m => m.Senha)
                    </span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Login" />
                </div>
            }
        </div>
    </div>
</div>