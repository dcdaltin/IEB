<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plataforma IEB-UFSC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-fixed-top navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("Plataforma IEB-UFSC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="http://www.ieb.ufsc.br">Conheça o IEB-UFSC</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sobre", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contato", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

                <ul class="nav navbar-nav ml-auto">
                    @{if (Request.Cookies.AllKeys.Contains("TokkenCookie"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Área do Usuário", "Principal", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Sair", "Logout", "Autenticar", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Entrar", "Login", "Autenticar", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Plataforma IEB-UFSC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
