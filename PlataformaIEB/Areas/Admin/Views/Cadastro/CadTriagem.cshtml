@model PlataformaIEB.Areas.Admin.Models.VMTriagem
@{
    ViewBag.Title = "Triagem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-1">
        @using (Html.BeginForm())
        {

            <div class="row">
                <div class="col col-sm-3">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Data)
                        @Html.EditorFor(m => m.Data, new { @class = "form-control" })
                        <span id="helpBlock2" class="help-block">
                            @Html.ValidationMessageFor(m => m.Data)
                        </span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Medicos)
                @Html.DropDownListFor(m => m.IDMedico, (Model.Medicos).Select(op => new SelectListItem
           {
               Text = op.Nome,
               Value = op.Id.ToString(),
               Selected = (Model != null) && (op.Id == Model.IDMedico)
           }), "Selecione o médico ...", new { @class = "form-control"})
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.IDMedico)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Pacientes)
                @Html.DropDownListFor(m => m.IDPaciente, (Model.Pacientes).Select(op => new SelectListItem
           {
               Text = op.Nome,
               Value = op.Id.ToString(),
               Selected = (Model != null) && (op.Id == Model.IDPaciente)
           }), "Selecione o paciente ...", new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.IDPaciente)
                </span>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Peso)
                @Html.EditorFor(m => m.Peso, new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.Peso)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Altura)
                @Html.EditorFor(m => m.Altura, new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.Altura)
                </span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar" />
                @Html.ActionLink("Cancelar", "PrincipalExame", new { area = "Admin", Controller = "Cadastro" }, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>

