@model List<PlataformaIEB.Models.Exame>

@{
    ViewBag.Title = "PrincipalExame";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row text-right">
    <p>@Html.ActionLink("Cadastrar Exame", "CadTriagem", "Cadastro", new { @class = "btn btn-success" })</p>
</div>

<div class="row">
        
        <div class="panel-group" id="collapse" role="tablist" aria-multiselectable="true">
            @foreach (var item in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="collapse-heading-@item.Id">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#collapse" href="#collapse-@item.Id" aria-expanded="true" aria-controls="collapse-@item.Id">
                                Médico: @item.Medico.Nome | Paciente: @item.Paciente.Nome | Data: @item.Data
                            </a>
                        </h4>
                    </div>
                    <div id="collapse-@item.Id" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapse-heading-@item.Id">
                        <div class="panel-body">
                            
                            <div id="my-carousel-@item.Id" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#my-carousel-@item.Id" data-slide-to="0" class="active"></li>
                                    <li data-target="#my-carousel-@item.Id" data-slide-to="1"></li>
                                    <li data-target="#my-carousel-@item.Id" data-slide-to="2"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <div class="row col-lg-offset-1">
                                            <table class="table table-responsive">
                                                <thead>
                                                    <tr>

                                                        <th>Idade</th>
                                                        <th>Altura</th>
                                                        <th>Peso</th>
                                                        <th>IMC</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>@item.Triagem.Idade</td>
                                                        <td>@item.Triagem.Altura</td>
                                                        <td>@item.Triagem.Peso</td>
                                                        <td>@item.Triagem.IMC</td>
                                                    </tr>
                                                </tbody>
                                            </table>    
                                        </div>
                                    </div>


                                    @if (@item.Clinico != null)
                                    {

                                    <div class="item">

                                        <div class="row col-lg-offset-1">
                                            <table class="table table-responsive">
                                                <thead>
                                                    <tr>
                                                        <th>Pubarca</th>
                                                        <th>Telarca</th>
                                                        <th>Vol. Testicular</th>
                                                        <th>Altura dos Pais</th>
                                                        <th>Menarca Mãe</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>@item.Clinico.Pubarca</td>
                                                        <td>@item.Clinico.Telarca</td>
                                                        <td>@item.Clinico.VolTesticulo</td>
                                                        <td>@item.Clinico.AlturaPaes</td>
                                                        <td>@item.Clinico.IdadeMenarcaMae</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        
                                    </div>

                                    }

                                    @if (@item.Imagem != null)
                                    {

                                    <div class="item">

                                        <div class="row col-lg-offset-1">
                                        <table class="table table-responsive">
                                            <thead>
                                                <tr>

                                                    <th>Idade Óssea</th>
                                                    <th>Vol. Ovário Dir</th>
                                                    <th>Vol. Ovário Esq</th>
                                                    <th>Vol. Útero</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@item.Imagem.IdadeOssea</td>
                                                    <td>@item.Imagem.VolOvarioD</td>
                                                    <td>@item.Imagem.VolOvarioE</td>
                                                    <td>@item.Imagem.VolUtero</td>
                                                </tr>
                                            </tbody>
                                        </table>    
                                        </div>

                                    </div>

                                    }

                                    @if (@item.Lab != null)
                                    {
                                    <div class="item">

                                        <div class="row col-lg-offset-1">
                                        <table class="table table-responsive">
                                            <thead>
                                                <tr>

                                                    <th>LH Basal</th>
                                                    <th>FSH Basal</th>
                                                    <th>GnRH</th>
                                                    <th>Testosterona</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@item.Lab.LHBasal</td>
                                                    <td>@item.Lab.FSHBasal</td>
                                                    <td>@item.Lab.GnRH15</td>
                                                    <td>@item.Lab.Testosterona</td>
                                                </tr>
                                            </tbody>
                                        </table> 
                                        </div>
                                    </div>
                                    }

                                    @if (@item.Diagnostico != null)
                                    {
                                        <div class="item">

                                            <div class="row col-lg-offset-1">
                                                <table class="table table-responsive">
                                                    <thead>
                                                        <tr>

                                                            <th>Diagnóstico</th>
                                                            <th>Comentários</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>@item.Diagnostico.Diagnosticado</td>
                                                            <td>@item.Diagnostico.Comentario</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }

                                </div>

                                <!-- Controls -->
                                <a class="left carousel-control" href="#my-carousel-@item.Id" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#my-carousel-@item.Id" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

