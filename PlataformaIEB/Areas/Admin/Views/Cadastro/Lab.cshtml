@model PlataformaIEB.Models.Laboratorial
@{
    ViewBag.Title = "Lab";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Lab</h2>

<div class="row">
    <div class="col-md-offset-1">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FSHBasal)
                @Html.DropDownListFor(m => m.FSHBasal, new SelectList(ViewBag.Lista), "Selecione o resultado ...", new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.FSHBasal)
                </span>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.LHBasal)
                @Html.DropDownListFor(m => m.LHBasal, new SelectList(ViewBag.Lista), "Selecione o resultado ...", new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.FSHBasal)
                </span>
            </div>

            if (ViewBag.Sexo == "Masculino")
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Testosterona)
                    @Html.DropDownListFor(m => m.Testosterona, new SelectList(ViewBag.Lista), "Selecione o resultado ...", new { @class = "form-control" })
                    <span id="helpBlock2" class="help-block">
                        @Html.ValidationMessageFor(m => m.Testosterona)
                    </span>
                </div>
            }


            <div class="form-group">
                <div class="row">

                    <div class="col-sm-2">
                        @Html.LabelFor(m => m.GnRH15)
                        @Html.EditorFor(m => m.GnRH15)
                    </div>
                    <span id="helpBlock2" class="help-block">
                        @Html.ValidationMessageFor(m => m.GnRH15)
                    </span>

                    <div class="col-sm-2">
                        @Html.LabelFor(m => m.GnRH30)
                        @Html.EditorFor(m => m.GnRH30)
                    </div>
                    <span id="helpBlock2" class="help-block">
                        @Html.ValidationMessageFor(m => m.GnRH30)
                    </span>

                    <div class="col-sm-2">
                        @Html.LabelFor(m => m.GnRH45)
                        @Html.EditorFor(m => m.GnRH45)
                    </div>
                    <span id="helpBlock2" class="help-block">
                        @Html.ValidationMessageFor(m => m.GnRH45)
                    </span>

                    <div class="col-sm-2">
                        @Html.LabelFor(m => m.GnRH60)
                        @Html.EditorFor(m => m.GnRH60)
                    </div>
                    <span id="helpBlock2" class="help-block">
                        @Html.ValidationMessageFor(m => m.GnRH60)
                    </span>

                </div>
            </div>


            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar" />
                @Html.ActionLink("Cancelar", "PrincipalExame", new { area = "Admin", Controller = "Cadastro" }, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>