@model  PlataformaIEB.Models.Imagem
@{
    ViewBag.Title = "Imagem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Imagem</h2>

<div class="row">
    <div class="col-md-offset-1">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.IdadeOssea)
                @Html.CheckBoxFor(m => m.IdadeOssea, new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.IdadeOssea)
                </span>
            </div>


            if (ViewBag.Sexo == "Feminino")
            {
                @Html.Partial("_FemImagem", Model);
            }


            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar" />
                @Html.ActionLink("Cancelar", "PrincipalExame", new { area = "Admin", Controller = "Cadastro" }, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>