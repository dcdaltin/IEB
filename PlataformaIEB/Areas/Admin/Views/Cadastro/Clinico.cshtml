@model PlataformaIEB.Models.Clinico
@{
    ViewBag.Title = "Clinico";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Clinico</h2>

<div class="row">
    <div class="col-md-offset-1">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Pubarca)
                @Html.CheckBoxFor(m => m.Pubarca, new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.Pubarca)
                </span>
            </div>

            if (ViewBag.Sexo == "Masculino")
            {
                @Html.Partial("_MascClinico", Model);
            }
            if (ViewBag.Sexo == "Feminino")
            {
                @Html.Partial("_FemClinico", Model);
            }

            <div class="form-group">
                @Html.LabelFor(m => m.AlturaPaes)
                @Html.EditorFor(m => m.AlturaPaes, new { @class = "form-control" })
                <span id="helpBlock2" class="help-block">
                    @Html.ValidationMessageFor(m => m.AlturaPaes)
                </span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar" />
                @Html.ActionLink("Cancelar", "PrincipalExame", new { area = "Admin", Controller = "Cadastro" }, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>


