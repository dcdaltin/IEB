@model PlataformaIEB.Areas.Admin.Models.VMGrafico
@{
    ViewBag.Title = "Grafico";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Grafico</h2>


<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Pacientes)
            @Html.DropDownListFor(m => m.IDPaciente, (Model.Pacientes).Select(op => new SelectListItem
           {
               Text = op.Nome,
               Value = op.Id.ToString(),
               Selected = (Model != null) && (op.Id == Model.IDPaciente)
           }), "Selecione o paciente ...", new { @class = "form-control" })
            <span id="helpBlock2" class="help-block">
                @Html.ValidationMessageFor(m => m.IDPaciente)
            </span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Salvar" />
            @Html.ActionLink("Cancelar", "Index", new { area = "Admin", Controller = "Cadastro" }, new { @class = "btn btn-danger" })
        </div>
    }
</div>