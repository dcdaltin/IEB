<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ÁREA RESTRITA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Plataforma IEB-UFSC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Principal", "Index", "Cadastro")</li>
                    <li>@Html.ActionLink("Pacientes", "PrincipalPaciente", "Cadastro")</li>
                    <li>@Html.ActionLink("Exames", "PrincipalExame", "Cadastro")</li>
                    <li>@Html.ActionLink("Relatório", "Grafico", "Grafico")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Logout", "Logout", "Autenticar")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading text-center"><h2>ÁREA DO @ViewBag.Nome</h2></div>
        <div class="panel-body">
            
            @RenderBody()
        </div>
    </div>
    <hr />
    <footer>
        <p>Área Restrita  -  &copy; @DateTime.Now.Year - Plataforma IEB </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
