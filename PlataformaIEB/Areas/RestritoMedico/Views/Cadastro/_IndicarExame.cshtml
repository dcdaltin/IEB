@model PlataformaIEB.SistemaEspecialista.Motor

<div class="row">
    <div class="col">
        <table class="table table-responsive" title="Indicações do Especialista">
            <thead>
                <tr>Resultados</tr>
                <tr>
                    <tn>Descrição</tn>
                    <th>Estado</th>
                    <th>Confiança</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Resultado())
            {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cond</td>
                        <td>@item.Conf</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col">
        <table class="table table-responsive" title="Regras Aplicadas">
            <thead>
                <tr>Regras Aplicadas</tr>
                <tr>
                    <tn>Descrição</tn>
                    <th>Estado</th>
                    <th>Confiança</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Aplicadas())
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cabeca.Conf</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

