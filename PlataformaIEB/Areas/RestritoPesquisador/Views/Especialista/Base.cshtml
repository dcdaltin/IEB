@model PlataformaIEB.ViewModel.VMBase
@{
    ViewBag.Title = "Base";
    Layout = "~/Areas/RestritoPesquisador/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2">
        <table class="table table-responsive">
            <caption><h2>Bases</h2></caption>
            <tbody>
                @foreach (var item in Model.Bases)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Nome, "Variavel/" + item.ID)</td>
                        <td>@Html.ActionLink("Aplicar", "Limpa/"+ item.ID, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(o => o.Usuario)

            <h2>Nova Base</h2>
            <p>Para adicionar uma nova Base, entre com um novo nome e precione o botão Adicionar</p>
            <div class="row">
                <div class="form-group">
                    <table class="table table-responsive">
                        <tbody>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.Nome)</td>
                                <td>
                                    @Html.EditorFor(m => m.Nome, new { @class = "form-control" })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <span class="help-block">
                        @Html.ValidationMessageFor(m => m.Nome)
                    </span>
                </div>
            </div>
            <div class="row" style="text-align:right">
                <input type="submit" class="btn btn-default" value="Adicionar" />
            </div>
        }
    </div>
</div>