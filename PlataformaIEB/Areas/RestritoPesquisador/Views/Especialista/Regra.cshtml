@model PlataformaIEB.ViewModel.VMRegra
@{
    ViewBag.Title = "Regra";
    Layout = "~/Areas/RestritoPesquisador/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2" style="border:ridge">
        <table class="table table-responsive">
            <caption><h2>Regras</h2></caption>
            <tbody>
                @foreach (var item in Model.Regras)
                {
                    <tr>
                        <td>@Html.ActionLink(item, "EditRegra/")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(o => o.BaseID)

            <h2>Nova Regra</h2>
            <p>Para adicionar uma nova regra, entre com um novo nome e uma condição. Após, selecione as opções nos botões Adicionar Condição ou Adicionar Ação</p>
            <div class="row">
                <div class="form-group">
                    <table class="table table-responsive" style="align-items:center">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.Nome)</td>
                                <td>
                                    @Html.EditorFor(m => m.Nome, new { @class = "form-control" })
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.VarID)</td>
                                <td>@Html.DropDownListFor(m => m.VarID, new SelectList(Model.Variaveis), "Selecione uma Variavel...", new { @class = "form-control" })</td>
                                <td>@Html.DisplayNameFor(m => m.Operador)</td>
                                <td>@Html.DropDownListFor(m => m.Operador, new SelectList(Model.Operadores), "Selecione um Comparador...", new { @class = "form-control" })</td>
                                <td>@Html.DisplayNameFor(m => m.Valor)</td>
                                <td>@Html.EditorFor(m => m.Valor, new { @class = "form-control" })</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.Not)</td>
                                <td>@Html.CheckBoxFor(m => m.Not, new { @class = "form-control" })</td>
                            </tr>
                        </tbody>
                    </table>
                    <span class="help-block">
                        @Html.ValidationMessageFor(m => m.Nome)
                    </span>
                </div>
            </div>
            <div class="row" style="text-align:right">
                <input type="submit" class="btn btn-default" value="Adicionar" />
            </div>
        }
    </div>
</div>

