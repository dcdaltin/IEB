@model PlataformaIEB.ViewModel.VMEntrada
@{
    ViewBag.Title = "Entrada";
    Layout = "~/Areas/RestritoPesquisador/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2">
        <table class="table table-responsive">
            <caption><h2>Variaveis</h2></caption>
                @foreach (var item in Model.Variaveis)
                {
                    <thead>
                        <tr>
                            <td><h3> @item.Nome </h3></td>
                        </tr>
                        <tr>
                            <td>Valor</td>
                            <td>Confiança</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var valor in item.Valores)
                        {
                            <tr>
                                <td>@valor.Valor</td>
                                <td>@((valor.Confianca * 100).ToString())</td>
                            </tr>
                        }
                    </tbody>
                }
        </table>
    </div>

    <div class="col-lg-10" style="text-align:center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(o=>o.Id)

            <h2>Nova Condição</h2>
            <p>Para adicionar uma nova regra, entre com um novo nome e uma condição. Após, selecione as opções nos botões Adicionar Condição ou Adicionar Ação</p>
            <div class="row">
                <div class="form-group">
                    <table class="table table-responsive" style="align-items:center">
                        <thead>
                            <tr></tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.Var)</td>
                                <td>@Html.DropDownListFor(m => m.Var, new SelectList(Model.Variaveis.Select(o=>o.Nome)), "Selecione uma Variavel...", new { @class = "form-control" })</td>
                                <td>@Html.DisplayNameFor(m => m.Valor)</td>
                                <td>@Html.EditorFor(m => m.Valor, new { @class = "form-control" })</td>
                                <td>@Html.DisplayNameFor(m => m.Conf)</td>
                                <td>@Html.EditorFor(m => m.Conf, new { @class = "form-control" })</td>
                            </tr>
                        </tbody>
                    </table>
                    <span class="help-block">
                        @Html.ValidationMessageFor(m => m.Var)
                    </span>
                </div>
            </div>
            <div class="row" style="text-align:right">
                <input type="submit" class="btn btn-default" value="Adicionar" />
            </div>

            <div class="row">
                <p><h2>Resultado</h2></p>
                <p>@Html.Action("Resultado", new { ID = Model.Id })</p>
            </div>
        }
    </div>
</div>

